# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.sh]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.php]
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Dockerfile]
indent_size = 2